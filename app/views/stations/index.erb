<div  class="container">

  <h1>Stations</h1>

  <table class = "table">
    <tr>
      <th>Station Name</th>
      <th>City</th>
      <th>Dock Count</th>
      <th>Installation Date</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
    <% @stations.each do |station| %>
      <tr>
        <td id="station-name"><a href='/stations/<%= station.id %>'><%= station.name %></a></td>
        <td id="city"><%= station.city.name%> </td>
        <td><%= station.dock_count%></td>
        <td><%= station.installation_date%></td>
        <td><a class="btn btn-success" href="/stations/<%= station.id %>/edit" role="button">Edit</a></td>
        <td>
          <form action="/stations/<%= station.id %>" method="post">
          <input type="hidden" name="_method" value="DELETE" />
          <input class="btn btn-danger" type="submit" value="Delete" />
          </form>
        </td>
      </tr>
    <% end  %>

  </table>
</div>
